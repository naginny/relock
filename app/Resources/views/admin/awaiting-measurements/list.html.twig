{% extends "admin/basic.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {% if orders is empty %}
                    <div class="card-content">
                        <div class="alert alert-info">
                            No awaiting measurement orders
                        </div>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Submitted</th>
                                <th>Requested measurement date</th>
                                <th>City</th>
                                <th>Phone number</th>
                                <th>Email</th>
                                <th>Products</th>
                                <th>Measurements set</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for index, order in orders %}
                            <tr>
                                <th scope="row">{{ index+1 }}</th>
                                <td>{{ order.customer.name }}</td>
                                <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>{{ order.requestedMeasurementAt|date('Y-m-d') }}</td>
                                <td>{{ order.address.city }}</td>
                                <td>{{ order.customer.phone }}</td>
                                <td>{{ is_granted('ROLE_SALES_AGENT') ? order.customer.email : '***' }}</td>
                                <td>{{ order.productsAmount }}</td>
                                <td>{{ order.measurementsSet ? 'yes' : 'no'}}</td>
                                <td>
                                    <a href="{{ path('admin_awaiting_measurements_proceed', { orderId: order.id }) }}">
                                        <button type="button" class="btn btn-primary m-b-10 m-l-5">await pricing</button>
                                    </a>
                                    <a href="{{ path('admin_awaiting_measurements_products', { orderId: order.id }) }}">
                                        <button type="button" class="btn btn-info m-b-10 m-l-5">products</button>
                                    </a>
                                    {% if is_granted('ROLE_SALES_AGENT') %}
                                    <a href="{{ path('admin_reject', { orderId: order.id }) }}">
                                        <button type="button" class="btn btn-danger m-b-10 m-l-5">reject</button>
                                    </a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}