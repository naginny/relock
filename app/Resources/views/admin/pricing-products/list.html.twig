{% extends "admin/basic.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {% if products is empty %}
                    <div class="card-content">
                        <div class="alert alert-info">
                            No pricing
                        </div>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Tax</th>
                                <th>Total price</th>
                                <th>Prepayment</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for index, product in products %}
                            <tr>
                                <th scope="row">{{ index+1 }}</th>
                                <th>{{ product.id }}</th>
                                <td>{{ product.type }}</td>
                                <td>{{ product.tax * 100 ~ "%" }}</td>
                                <td>{{ product.totalPrice ~ '€' }}</td>
                                <td>{{ product.prepaymentAmount ~ '€' }}</td>
                                <td>
                                    <a href="{{ path('admin_awaiting_pricing_products_edit', { orderId: order.id, productId: product.id }) }}">
                                        <button type="button" class="btn btn-primary m-b-10 m-l-5">edit</button>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body text-right">
                <a href="{{ path('admin_awaiting_pricing') }}">
                    <button type="button" class="btn btn-success m-b-10 m-l-5">back</button>
                </a>
            </div>
        </div>
    </div>

</div>

{% endblock %}