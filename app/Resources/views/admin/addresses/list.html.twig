{% extends "admin/basic.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {% if addresses is empty %}
                    <div class="card-content">
                        <div class="alert alert-info">
                            No addresses to show
                        </div>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>City</th>
                                <th>Street</th>
                                <th>Floor</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for index, address in addresses %}
                            <tr>
                                <th scope="row">{{ index+1 }}</th>
                                <td>{{ address.id }}</td>
                                <td>{{ address.city }}</td>
                                <td>{{ address.streetAddress }}</td>
                                <td>{{ address.floor }}</td>
                                <td>{{ address.notes }}</td>
                                <td>
                                    <a href="{{ path('admin_new_order_addresses_edit', { orderId: order.id, customerId: order.customer.id, addressId: address.id }) }}">
                                        <button type="button" class="btn btn-primary m-b-10 m-l-5">edit</button>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body text-right">
                <a href="{{ path('admin_new_orders') }}">
                    <button type="button" class="btn btn-success m-b-10 m-l-5">back</button>
                </a>
                <a href="{{ path('admin_new_order_addresses_add', { orderId: order.id }) }}">
                    <button type="button" class="btn btn-primary m-b-10 m-l-5">new address</button>
                </a>
            </div>
        </div>
    </div>

</div>

{% endblock %}