{% extends "admin/basic.html.twig" %}

{% block content %}
    <style>.form-group { margin-right: 15px !important; }</style>
    <div class="row">
        <form action="{{ path('admin_customers') }}" method="GET">
        <div class="form-inline">
            <div class="form-group">
        From: <input type="text" name="from" required="required" class="js-datepicker form-control" value="{{ from }}"><br>
            </div>
            <div class="form-group">
        To: <input type="text" name="to" required="required" class="js-datepicker form-control" value="{{ to }}">
            </div>
            <div class="form-group">
                <input type="submit" class="form-control" value="show">
            </div>
        </div>
        </form>
    </div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {% if customers is empty %}
                    <div class="card-content">
                        <div class="alert alert-info">
                            No customers for selected period
                        </div>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Orders</th>
                                <th>Closed orders</th>
                                <th>Total price</th>
                                <th>Total markup</th>
                                <th>Revoked</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for index, customer in customers %}
                            <tr>
                                <th scope="row">{{ index+1 }}</th>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.surname }}</td>
                                <td>{{ customer.email }}</td>
                                <td>{{ customer.phone }}</td>
                                <td>{{ customer.ordersAmount }}</td>
                                <td>{{ customer.closedOrdersAmount }}</td>
                                <td>{{ customer.totalPrice ~ '€'  }}</td>
                                <td>{{ customer.totalMarkup ~ '€'  }}</td>
                                <td>{{ customer.permissionToUsePersonalInfo ? 'no' : 'yes' }}</td>
                                <td>
                                    <a href="{{ path('admin_customers_view', { customerId: customer.id }) }}">
                                        <button type="button" class="btn btn-primary m-b-10 m-l-5">view</button>
                                    </a>
                                    {% if customer.permissionToUsePersonalInfo %}
                                    <a href="{{ path('admin_customers_revoke', { customerId: customer.id }) }}">
                                        <button type="button" class="btn btn-warning m-b-10 m-l-5">revoke</button>
                                    </a>
                                    {% else %}
                                        <a href="{{ path('admin_customers_unrevoke', { customerId: customer.id }) }}">
                                            <button type="button" class="btn btn-success m-b-10 m-l-5">un-revoke</button>
                                        </a>

                                    {% endif %}
                                    <a href="{{ path('admin_customers_anonymize', { customerId: customer.id }) }}">
                                        <button type="button" class="btn btn-danger m-b-10 m-l-5">anonymize</button>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}