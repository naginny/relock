    <div class="row">
        {{ form_errors(form) }}
    </div>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Pasūtījuma informācija</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item">
                    {{ form_label(form.amountOfDoors, 'Durvju skaits') }}
                    {{ form_widget(form.amountOfDoors, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.amountOfDoors) }}
                </li>
                <li class="list-group-item">
                    {{ form_label(form.amountOfWindows, 'Logu skaits') }}
